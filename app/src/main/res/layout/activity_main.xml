<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BF000000"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/krokyAktualBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#81D4FA"
        android:clickable="false"
        android:text="Prešiel si:\n0"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24dp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_outline_directions_walk_50"
        app:iconTint="#000000" />


    <LinearLayout
        android:id="@+id/buttons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/krokyAktualBtn"
        android:orientation="horizontal">

        <Button
            android:id="@+id/krokyCelkBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#FFCC80"
            android:drawableTop="@drawable/ic_baseline_bar_chart_50"
            android:drawableTint="#000000"
            android:text="Prehľad\nkrokov"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24dp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/liekyBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#FFF9A7"
            android:drawableTop="@drawable/ic_baseline_medication_50"
            android:drawableTint="#000000"
            android:text="Lieky"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24dp"
            app:cornerRadius="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/volanieBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#A5D6A7"
            android:drawableTop="@drawable/ic_baseline_call_50"
            android:drawableTint="#000000"
            android:text="Volanie rodine"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24dp"
            app:cornerRadius="15dp" />

        <Button
            android:id="@+id/hraBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#EF9A9A"
            android:drawableTop="@drawable/ic_baseline_psychology_50"
            android:drawableTint="#000000"
            android:text="Hra"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="24dp"
            app:cornerRadius="15dp" />
    </LinearLayout>


</RelativeLayout>